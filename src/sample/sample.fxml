<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <VBox alignment="CENTER" spacing="35" AnchorPane.rightAnchor="25" AnchorPane.leftAnchor="25" AnchorPane.topAnchor="25" AnchorPane.bottomAnchor="95">
        <StackPane >
            <Group StackPane.alignment="CENTER">
                <ImageView>
                    <image>
                        <Image url="/Images/Login.png"/>
                    </image>
                </ImageView>
            </Group>
        </StackPane>

        <JFXTextField fx:id="txtUser" promptText="User" prefWidth="100"/>
        <JFXPasswordField fx:id="txtPassword" promptText="Password" prefWidth="100"/>
        <Label fx:id="lbError" text="Ingrese de nuevo sus datos" textFill="red" visible="false"/>
        <JFXButton fx:id="btnLogin" text="Login" prefWidth="100"/>
    </VBox>
</AnchorPane>