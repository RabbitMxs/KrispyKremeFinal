<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.emojione.EmojiOneView?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Employee_View.EmployeeView">

    <VBox AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" styleClass="hbox">
        <Label fx:id="lbWelcome" text="WELCOME: " style="-fx-text-fill: white"/>
        <Circle fx:id="image" radius="80"/>

        <JFXButton text="          Productos" contentDisplay="LEFT" >
            <graphic>
                <EmojiOneView glyphName="DOUGHNUT" glyphSize="40"/>
            </graphic>
        </JFXButton>

        <JFXButton text="          Paquetes">
            <graphic>
                <FontAwesomeIconView glyphName="INBOX" glyphSize="40" />
            </graphic>
        </JFXButton>

        <JFXButton text="  Crear paquete">
            <graphic>
                <MaterialDesignIconView glyphName="NEW_BOX" glyphSize="40"/>
            </graphic>
        </JFXButton>
        <JFXButton text="                  Exit">
            <graphic>
                <FontAwesomeIconView glyphName="WINDOW_CLOSE_ALT" glyphSize="40"/>
            </graphic>
        </JFXButton>
    </VBox>

    <GridPane fx:id="pnPrincipal" vgap="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="350" AnchorPane.rightAnchor="0">

        <TableView fx:id="tableProduct" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="817" prefHeight="707" visible="false">
            <columns>

                <TableColumn text="Imagen" prefWidth="204.25">
                    <cellValueFactory>
                        <PropertyValueFactory property=""/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Nombre del Producto" prefWidth="204.25">
                    <cellValueFactory>
                        <PropertyValueFactory property=""/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Description" prefWidth="204.25">
                    <cellValueFactory>
                        <PropertyValueFactory property=""/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Precio" prefWidth="204.25">
                    <cellValueFactory>
                        <PropertyValueFactory property=""/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <TableView fx:id="tablePackage" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="817" prefHeight="707" visible="true">
            <columns>
                <TableColumn text="Nombre del Paquete" prefWidth="272.33">
                    <cellValueFactory>
                        <PropertyValueFactory property=""/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Description" prefWidth="272.33">
                    <cellValueFactory>
                        <PropertyValueFactory property=""/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Precio" prefWidth="272.33">
                    <cellValueFactory>
                        <PropertyValueFactory property=""/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>


        <VBox fx:id="VbCarrito" styleClass="hbox1" GridPane.rowIndex="0" GridPane.columnIndex="1" visible="true">
            <JFXButton text="Carrito" styleClass="jfx-buttonC">
                <graphic>
                    <MaterialIconView glyphName="SHOPPING_CART" glyphSize="40" styleClass="glyph-icon1"/>
                </graphic>
            </JFXButton>
            <JFXButton text="Añadir al carrito" style="-fx-background-radius: 20">
                <graphic>
                    <MaterialIconView glyphName="ADD_SHOPPING_CART" glyphSize="40" styleClass="glyph-icon1"/>
                </graphic>
            </JFXButton>
        </VBox>
        <VBox fx:id="VbPackage" styleClass="hbox1" GridPane.rowIndex="0" GridPane.columnIndex="1" visible="false">
            <JFXButton text="Paquete" styleClass="jfx-buttonC">
                <graphic>
                    <FontAwesomeIconView glyphName="INBOX" glyphSize="40" styleClass="glyph-icon1"/>
                </graphic>
            </JFXButton>

            <JFXButton text="Añadir al paquete" style="-fx-background-radius: 20">
                <graphic>
                    <EmojiOneView glyphName="INBOX_TRAY" glyphSize="40"/>
                </graphic>
            </JFXButton>

        </VBox>
    </GridPane>


</AnchorPane>
